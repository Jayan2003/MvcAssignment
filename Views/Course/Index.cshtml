@model List<MvcAssignment.Models.Course>

<h2>Courses</h2>

<a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-3">
    Create New Course
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Hours</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Title</td>
                <td>@course.Hours</td>
                <td>
                    <a asp-controller="Course"
                       asp-action="Details"
                       asp-route-id="@course.Id"
                       class="btn btn-info btn-sm">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>